      },
      "icon": "@InspirestoneIcon",
      "trigger_upgrades": [
        {
          "id": "@InspireAdd2Attack2HealthTrigger"
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "InspirestoneIcon",
      "path": "textures/inspirestone.png"
    }
  ],
  "character_triggers": [
    {
      "id": "InspireAdd2Attack2HealthTrigger",
