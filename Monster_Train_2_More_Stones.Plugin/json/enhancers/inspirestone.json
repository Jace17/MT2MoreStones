{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "UnitUpgradeInspire",
      "type": "enhancer",
      "names": {
        "english": "InspireStone",
        "chinese": "激励石"
      },
      "descriptions": {
        "english": "Upgrade a unit with '<b>Inspire</b>: +[effect0.upgrade.charactertrigger0.effect0.upgrade.bonusdamage][attack] and +[effect0.upgrade.charactertrigger0.effect0.upgrade.bonushp][health].'",
