      },
      "relic_effects": [
        "@InspireEnhancer"
      ],
      "icon": "@InspirestoneIcon",
      "extensions": [
        {
          "enhancer": {
            "class": "ClassWurm",
            "pools": [
              "UnitUpgradePoolRare"
            ],
            "rarity": "rare"
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "InspireEnhancer",
      "name": "RelicEffectCardUpgrade",
      "param_card_type": "monster",
      "param_upgrade": "@AddInspire"
    }
  ],
  "upgrades": [
    {
      "id": "AddInspire",
      "titles": {
        "english": "Inspirestone",
        "chinese": "激励石"
      },
      "descriptions": {
        "english": "Gain '<b>Inspire</b>: +[charactertrigger0.effect0.upgrade.bonusdamage][attack] and +[charactertrigger0.effect0.upgrade.bonushp][health].'",
