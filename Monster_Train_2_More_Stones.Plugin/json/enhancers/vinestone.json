{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "SpellUpgradeRooted",
      "type": "enhancer",
      "names": {
        "english": "Vinestone",
        "chinese": "缠绕石"
      },
      "descriptions": {
        "english": "Upgrade a spell to apply [rooted] [effect0.upgrade.trigger0.effect0.status0.power] to enemy units.",
        "chinese": "升级一个法术，使其apply [rooted] [effect0.upgrade.trigger0.effect0.status0.power] to enemy units。"
      },
      "relic_effects": [
        "@RootedEnhancer"
      ],
      "icon": "@VinestoneIcon",
      "extensions": [
        {
          "enhancer": {
            "class": "ClassAwoken",
            "pools": [
              "SpellUpgradePoolCommon",
              "DraftUpgradePool",
              "MalickaDraftUpgradePool"
            ],
            "rarity": "common"
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "RootedEnhancer",
      "name": "RelicEffectCardUpgrade",
      "param_card_type": "spell",
      "param_upgrade": "@AddRootedEffect"
    }
  ],
  "upgrades": [
    {
      "id": "AddRootedEffect",
      "titles": {
        "english": "Vinestone",
        "chinese": "缠绕石"
      },
      "descriptions": {
        "english": "Gain 'Apply [rooted] [trigger0.effect0.status0.power] to enemy units.'",
        "chinese": "获得'Apply [rooted] [trigger0.effect0.status0.power] to enemy units。'"
      },
      "icon": "@VinestoneIcon",
      "card_trigger_upgrades": [
        {
          "id": "@ApplyRootedTrigger"
        }
      ],
      "filters": [
        "OnlySpells"
      ]
    }
  ],
  "sprites": [
    {
      "id": "VinestoneIcon",
      "path": "textures/vinestone-v2.png"
    }
  ],
  "card_triggers": [
    {
      "id": "ApplyRootedTrigger",
      "trigger": "on_cast",
      "descriptions": {
        "english": "Apply [rooted] [effect0.status0.power] to enemy units.",
        "chinese": "Apply [rooted] [effect0.status0.power] to enemy units。"
      },
      "effects": [
        {
          "id": "@EffectApplyRooted"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "EffectApplyRooted",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "heroes",
      "param_status_effects": [
        {
          "status": "rooted",
          "count": 1
        }
      ]
    }
  ]
}