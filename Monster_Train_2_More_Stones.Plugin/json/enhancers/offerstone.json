{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "SpellUpgradeOffering",
      "type": "enhancer",
      "names": {
        "english": "Offerstone",
        "chinese": "献祭石"
      },
      "descriptions": {
        "english": "Upgrade a targetless spell to gain <b>Offering</b> and -[effect0.upgrade.costreduction][ember].",
        "chinese": "升级一个非指定目标法术，使其获得<b>献祭</b>，费用 -[effect0.upgrade.costreduction][ember]。"
      },
      "relic_effects": [
        "@OfferingEnhancer"
      ],
      "icon": "@OfferstoneIcon",
      "extensions": [
        {
          "enhancer": {
            "class": "ClassStygian",
            "pools": [
              "SpellUpgradePoolCostReduction",
              "DraftUpgradePool",
              "MalickaDraftUpgradePool"
            ],
            "rarity": "common"
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "OfferingEnhancer",
      "name": "RelicEffectCardUpgrade",
      "param_card_type": "spell",
      "param_upgrade": "@AddOfferingTrait"
    }
  ],
  "upgrades": [
    {
      "id": "AddOfferingTrait",
      "titles": {
        "english": "Offerstone",
        "chinese": "献祭石"
      },
      "descriptions": {
        "english": "Gain <b>Offering</b> and -[costreduction][ember].",
        "chinese": "获得<b>献祭</b>，费用 -[effect0.upgrade.costreduction][ember]。"
      },
      "icon": "@OfferstoneIcon",
      "cost_reduction": 1,
      "xCostReduction": 1,
      "trait_upgrades": [
        {
          "id": "@OfferingTrait"
        }
      ],
      "filters": [
        "OnlySpells",
        "@TargetlessOnly",
        "@ExcludeOffering"
      ]
    }
  ],
  "sprites": [
    {
      "id": "OfferstoneIcon",
      "path": "textures/offerstone.png"
    }
  ],
  "upgrade_masks": [
    {
      "id": "ExcludeOffering",
      "excluded_traits": [
        "CardTraitTreasure"
      ]
    },
    {
      "id": "TargetlessOnly",
      "card_target_mode": [ "targetless" ]
    }
  ],
  "traits": [
    {
      "id": "OfferingTrait",
      "name": "CardTraitTreasure"
    }
  ]
}