{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "SpellUpgradeMix",
      "type": "enhancer",
      "names": {
        "english": "Flaskstone"
      },
      "descriptions": {
        "english": "Upgrade a spell to add [mix]."
      },
      "relic_effects": [
        "@AddMixEnhancer"
      ],
      "icon": "@FlaskstoneIcon",
      "extensions": [
        {
          "enhancer": {
            "class": "ClassLazarusLeague",
            "pools": [
              "SpellUpgradePoolCommon",
              "DraftUpgradePool",
              "MalickaDraftUpgradePool"
            ],
            "rarity": "common"
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "AddMixEnhancer",
      "name": "RelicEffectCardUpgrade",
      "param_card_type": "spell",
      "param_upgrade": "@AddMix"
    }
  ],
  "upgrades": [
    {
      "id": "AddMix",
      "titles": {
        "english": "Flaskstone"
      },
      "descriptions": {
        "english": "Gain [mix]."
      },
      "icon": "@FlaskstoneIcon",
      "card_trigger_upgrades": [
        {
          "id": "@AddMixTrigger"
        }
      ],
      "filters": [
        "OnlySpells"
      ]
    }
  ],
  "sprites": [
    {
      "id": "FlaskstoneIcon",
      "path": "textures/flaskstone.png"
    }
  ],
  "card_triggers": [
    {
      "id": "AddMixTrigger",
      "trigger": "on_cast",
      "descriptions": {
        "english": "[mix]."
      },
      "effects": [
        {
          "id": "@MixEffect"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "MixEffect",
      "name": "CardEffectMix",
      "param_int": 2
    }
  ]
}