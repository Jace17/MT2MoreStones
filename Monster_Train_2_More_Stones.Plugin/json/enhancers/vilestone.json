{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "SpellUpgradeCorruption",
      "type": "enhancer",
      "names": {
        "english": "Vilestone"
      },
      "descriptions": {
        "english": "Upgrade a spell to apply [corruption] <b>20</b> to enemy units."
      },
      "relic_effects": [
        "@CorruptionEnhancer"
      ],
      "icon": "@VilestoneIcon",
      "extensions": [
        {
          "enhancer": {
            "class": null,
            "pools": [
              "SpellUpgradePoolRare",
              "DraftUpgradePool",
              "MalickaDraftUpgradePool"
            ],
            "rarity": "rare"
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "CorruptionEnhancer",
      "name": "RelicEffectCardUpgrade",
      "param_card_type": "spell",
      "param_upgrade": "@AddCorruptionEffect"
    }
  ],
  "upgrades": [
    {
      "id": "AddCorruptionEffect",
      "titles": {
        "english": "Vilestone"
      },
      "descriptions": {
        "english": "Gain 'Apply [corruption] <b>20</b> to enemy units.'"
      },
      "icon": "@VilestoneIcon",
      "card_trigger_upgrades": [
        {
          "id": "@ApplyCorruptionTrigger"
        }
      ],
      "filters": [
        "OnlySpells"
      ]
    }
  ],
  "sprites": [
    {
      "id": "VilestoneIcon",
      "path": "textures/vilestone.png"
    }
  ],
  "card_triggers": [
    {
      "id": "ApplyCorruptionTrigger",
      "trigger": "on_cast",
      "descriptions": {
        "english": "Apply [corruption] [effect0.status0.power] to enemy units."
      },
      "effects": [
        {
          "id": "@EffectApplyCorruption"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "EffectApplyCorruption",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "heroes",
      "param_status_effects": [
        {
          "status": "corruption",
          "count": 20
        }
      ]
    }
  ]
}