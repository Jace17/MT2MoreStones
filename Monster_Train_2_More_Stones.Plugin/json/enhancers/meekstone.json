{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "SpellUpgradeSap",
      "type": "enhancer",
      "names": {
        "english": "Meekstone",
        "chinese": "驯化石"
      },
      "descriptions": {
        "english": "Upgrade a spell to apply [sap] [effect0.upgrade.trigger0.effect0.status0.power] to enemy units.",
        "chinese": "升级一个法术，使其'对本层所有敌方单位施加[sap] [effect0.upgrade.trigger0.effect0.status0.power]。'"
      },
      "relic_effects": [
        "@SapEnhancer"
      ],
      "icon": "@MeekstoneIcon",
      "extensions": [
        {
          "enhancer": {
            "class": "ClassStygian",
            "pools": [
              "SpellUpgradePoolCommon",
              "DraftUpgradePool",
              "MalickaDraftUpgradePool"
            ],
            "rarity": "uncommon"
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "SapEnhancer",
      "name": "RelicEffectCardUpgrade",
      "param_card_type": "spell",
      "param_upgrade": "@AddSapEffect"
    }
  ],
  "upgrades": [
    {
      "id": "AddSapEffect",
      "titles": {
        "english": "Meekstone",
        "chinese": "驯化石"
      },
      "descriptions": {
        "english": "Gain 'Apply [sap] [trigger0.effect0.status0.power] to enemy units.'",
        "chinese": "获得'对本层所有敌方单位施加[sap] [trigger0.effect0.status0.power]。'"
      },
      "icon": "@MeekstoneIcon",
      "card_trigger_upgrades": [
        {
          "id": "@ApplySapTrigger"
        }
      ],
      "filters": [
        "OnlySpells"
      ]
    }
  ],
  "sprites": [
    {
      "id": "MeekstoneIcon",
      "path": "textures/meekstone.png"
    }
  ],
  "card_triggers": [
    {
      "id": "ApplySapTrigger",
      "trigger": "on_cast",
      "descriptions": {
        "english": "Apply [sap] [effect0.status0.power] to enemy units.",
        "chinese": "对本层所有敌方单位施加[sap] [effect0.status0.power]。"
      },
      "effects": [
        {
          "id": "@EffectApplySap"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "EffectApplySap",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "heroes",
      "param_status_effects": [
        {
          "status": "debuff",
          "count": 2
        }
      ]
    }
  ]
}