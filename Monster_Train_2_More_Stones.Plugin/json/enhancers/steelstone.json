{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "UnitUpgradeAddSteelguard",
      "type": "enhancer",
      "names": {
        "english": "Steelstone",
        "chinese": "钢铁石"
      },
      "descriptions": {
        "english": "Upgrade a unit with [steelguard] and [armor] [effect0.upgrade.status0.power].",
        "chinese": "升级一个单位，使其获得[armor] [effect0.upgrade.status0.power] 和[steelguard]。"
      },
      "relic_effects": [
        "@AddSteelguardEnhancer"
      ],
      "icon": "@SteelstoneIcon",
      "extensions": [
        {
          "enhancer": {
            "class": "ClassRailforged",
            "pools": [
              "UnitUpgradePoolCommon"
            ],
            "rarity": "common"
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "AddSteelguardEnhancer",
      "name": "RelicEffectCardUpgrade",
      "param_card_type": "monster",
      "param_upgrade": "@AddSteelguard"
    }
  ],
  "upgrades": [
    {
      "id": "AddSteelguard",
      "titles": {
        "english": "Steelstone",
        "chinese": "钢铁石"
      },
      "descriptions": {
        "english": "Gain [steelguard] and [armor] [status0.power].",
        "chinese": "获得[armor] [status0.power] 和[steelguard]。"
      },
      "icon": "@SteelstoneIcon",
      "status_effect_upgrades": [
        {
          "status": "armor",
          "count": 15
        }
      ],
      "trait_upgrades": [
        {
          "id": "@SteelguardTrait"
        }
      ],
      "filters": [
        "ExcludeEelGorgon",
        "@ExcludeSteelguard"
      ]
    }
  ],
  "sprites": [
    {
      "id": "SteelstoneIcon",
      "path": "textures/steelstone.png"
    }
  ],
  "upgrade_masks": [
    {
      "id": "ExcludeSteelguard",
      "excluded_traits": [
        "CardTraitModifyArmorOnHit"
      ]
    }
  ],
  "traits": [
    {
      "id": "SteelguardTrait",
      "name": "CardTraitModifyArmorOnHit",
      "param_int": 15
    }
  ]
}