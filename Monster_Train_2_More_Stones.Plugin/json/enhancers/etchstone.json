{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "UnitUpgradeEtch",
      "type": "enhancer",
      "names": {
        "english": "Etchstone",
        "chinese": "蚀刻石"
      },
      "descriptions": {
        "english": "Upgrade a unit with '<b>Etch</b>: +[effect0.upgrade.charactertrigger0.effect0.upgrade.bonusdamage][attack] and +[effect0.upgrade.charactertrigger0.effect0.upgrade.bonushp][health].'",
        "chinese": "升级一个单位，使其获得'<b>蚀刻</b>：+[effect0.upgrade.charactertrigger0.effect0.upgrade.bonusdamage][attack]，+[effect0.upgrade.charactertrigger0.effect0.upgrade.bonushp][health]。'"
      },
      "relic_effects": [
        "@EtchEnhancer"
      ],
      "icon": "@EtchstoneIcon",
      "extensions": [
        {
          "enhancer": {
            "class": "ClassWurm",
            "pools": [
              "UnitUpgradePoolCommon"
            ],
            "rarity": "uncommon"
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "EtchEnhancer",
      "name": "RelicEffectCardUpgrade",
      "param_card_type": "monster",
      "param_upgrade": "@AddEtch"
    }
  ],
  "upgrades": [
    {
      "id": "AddEtch",
      "titles": {
        "english": "Etchstone",
        "chinese": "蚀刻石"
      },
      "descriptions": {
        "english": "Gain '<b>Etch</b>: +[charactertrigger0.effect0.upgrade.bonusdamage][attack] and +[charactertrigger0.effect0.upgrade.bonushp][health].'",
        "chinese": "获得'<b>蚀刻</b>：+[charactertrigger0.effect0.upgrade.bonusdamage][attack]，+[charactertrigger0.effect0.upgrade.bonushp][health]。'"
      },
      "icon": "@EtchstoneIcon",
      "trigger_upgrades": [
        {
          "id": "@EtchAdd4Attack4HealthTrigger"
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "EtchstoneIcon",
      "path": "textures/etchstone.png"
    }
  ],
  "character_triggers": [
    {
      "id": "EtchAdd4Attack4HealthTrigger",
      "trigger": "card_exhausted",
      "descriptions": {
        "english": "+[effect0.upgrade.bonusdamage][attack] and +[effect0.upgrade.bonushp][health].",
        "chinese": "+[effect0.upgrade.bonusdamage][attack]，+[effect0.upgrade.bonushp][health]。"
      },
      "effects": [
        {
          "id": "@EffectAdd4Attack4Health"
        }
      ]
    }
  ]
}